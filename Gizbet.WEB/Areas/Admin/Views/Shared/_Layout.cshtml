<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gizbet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/Content/Images/main_ico.png" align="left" style="height: 32px; margin-top: -7px;" />
                    Gizbet
                </a>

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Лоты", "Index", "Home")</li>
                    <li>@Html.ActionLink("Категории", "Index", "Home")</li>
                    <li>@Html.ActionLink("Пользователи", "Index", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a><span class="glyphicon glyphicon-user"></span> @User.Identity.Name</a></li>
                    <li><a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-log-out"></span> Выход</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">

    </div>

    <div class="container body-content">
        <div class="container">
            <div id="mainDiv" class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>

    <footer id="footer">
        <h4 class="text-muted" align="right" style="margin: 15px; margin-right: 50px">&copy; @DateTime.Now.Year - Gizbet</h4>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>
