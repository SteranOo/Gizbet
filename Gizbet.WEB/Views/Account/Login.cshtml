@{
    Layout = "~/Views/Shared/_LayoutNoAuth.cshtml";
}

@model Gizbet.WEB.Models.ApplicationUserLoginModel

<div class="container">
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Вход</div>
                <div style="float: right; font-size: 80%; position: relative; top: -10px"><a href="#">Забыли пароль?</a>
                </div>
            </div>

            <div style="padding-top: 30px" class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new {@class = "alert alert-danger" })

                    <div class="form-horizontal">
                        <div style="margin-bottom: 30px; margin-left: 10%" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="UserName" placeholder="имя пользователя" style="max-width: 100%; width: 85%;">

                        </div>
                        <p style="margin-top: -25px" align="center">@Html.ValidationMessageFor(model => model.UserName, "", new {@class = "text-danger"})</p>

                        <div style="margin-bottom: 30px; margin-left: 10%;" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-password" type="password" class="form-control" name="Password" placeholder="пароль" style="height: 35px; max-width: 100%; width: 85%;">

                        </div>

                        <p style="margin-top: -25px" align="center">@Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})</p>

                        <div class="form-group" align="center">
                            <div class="checkbox" align="center">
                                <label align="center">
                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Запомнить меня
                                </label>
                            </div>
                        </div>

                        <div class="form-group" align="center">
                            <div class="col-sm-12 controls">
                                <input type="submit" id="btn-login" class="btn btn-success" value="Войти"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div align="center">
                                <div style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
                                    Еще нет аккаунта?
                                    <a href="@Url.Action("Register")">
                                        Зарегистрируйтесь здесь
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
